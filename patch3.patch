 /* ==== World Cards ==== */
 .world-card {
   background: white;
   border-radius: 20px;
   box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
   padding: 15px;
   transition: 0.3s ease;
   cursor: pointer;
 }
 
 .world-card:hover {
   transform: translateY(-6px);
   box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
 }
 
-.world-card img {
+.world-thumb {
   width: 100%;
+  min-height: 120px;
   border-radius: 12px;
+  display: grid;
+  place-items: center;
+  font-size: 2.5rem;
+  background: linear-gradient(135deg, #d5e9ff, #f6fbff);
 }
 
 .world-card h2 {
   margin-top: 12px;
   color: #1e88e5;
 }
 
 .world-card p {
   font-size: 0.9rem;
   color: #555;
 }
 
 /* ==== Game Area ==== */
 #game-container {
   position: relative;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
   height: 100%;
 }
